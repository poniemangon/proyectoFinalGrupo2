<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/header_footer.css" rel="stylesheet" />
    <link href="/css/detalle-producto-style.css" rel="stylesheet" />
    <title>Detalle producto</title>
  </head>
  <body>
    <%- include('./partials/header') %>

    <main class="producto">
      <div class="img-producto-container">
        <img
          src="/images/products/<%= product.image %>"
          class="imagen-producto"
        />
      </div>

      <div class="info-producto">
        <h2 class="nombre-producto"><%= product.name %></h2>
        <p class="descripcion-producto"><%= product.description %></p>
        <div>
          <p class="precio">$<%= product.price %></p>
          <p class="cuotas">Paga hasta 3 cuotas sin interés!</p>
        </div>
        <form class="talle">
          <label>Talle:</label>
          <select class="main-select">
            <option value="40">40</option>
            <option value="41">41</option>
            <option value="42">42</option>
            <option value="43">43</option>
            <option value="44">44</option>
            <option value="45">45</option>
          </select>
        </form>
        <div class="guia-talles">
          <a href="#">Guia de Talles</a>
        </div>
        <form class="cantidad">
          <label>Cantidad:</label>
          <select class="main-select">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </form>
        <% if (user) { %>
        <form
          action="/products/add"
          method="post"
          enctype="application/x-www-form-urlencoded"
        >
          <input
            type="hidden"
            id="productId"
            name="productId"
            value="<%= product.id %>"
          />
          <button type="submit" class="agregar-carrito-btn">
            Agregar al carrito
          </button>
        </form>
        <% } %>
        <% if (user) { %>
        <div class="editar-eliminar-btns-container">
          <a href="/products/edit/<%= product.id %>" class="editar-eliminar-btn"
            >Editar producto</a
          >
          <a
            href="/products/delete/<%= product.id %>"
            class="editar-eliminar-btn"
            >Eliminar producto</a
          >
        </div>
        <% } %>
        <div class="pago-envio">
          <div>
            <i class="fa-solid fa-credit-card"></i>
            <a href="#" class="metodos-pago">Métodos de Pago</a>
          </div>
          <div>
            <i class="fa-solid fa-truck-fast"></i>
            <a href="#" class="metodos-envio">Métodos de Envío</a>
          </div>
        </div>
      </div>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
