<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet" />
    <link href="/css/detalle-producto-style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <link href="/css/login-style.css" rel="stylesheet" />
    <link href="/css/header_footer.css" rel="stylesheet" />
    <title>Documento</title>
</head>

<body>
    <%- include('./partials/header') %>
        <br>
        <br>
        <br>
        <br>
        <main>
            <section class="container-principal">
                <div class="titulo">REGISTRARSE 
                </div>
                <div class="titulo"> 
                </div>

                <div class="opciones">
                    <a href="/login" style="color: black; text-decoration: none;">
                        <p>Inciar Sesión</p>
                    </a>
                    <a href="/register" style="color: black; text-decoration: none;">
                        <p>Registrarme</p>
                    </a>
                </div>
                <hr class="linea">

                <div class="formularios">


                    <form action="/register" method="post" enctype="multipart/form-data">
                        <div class="formulario-email">
                            <% if (locals && locals.errors) { %>
                                <% for (let error of locals.errors) { %>
                                  <div class="error-message">
                                    <%- error.msg %>
                                  </div>
                                <% } %>
                              <% } %>
                            <% if (locals && locals.message) { %>
                            
                          
                            <div class="palabra-email"> Usuario <%= message %></div>
                            <% } %>
                            <i class="fa-solid fa-envelope iconos"></i>
                            <label for="email"></label>
                            
                            <input class="email-form" 
                            type="text" 
                            id="username" 
                            name="username" 
                            <% if (locals.oldData && locals.oldData.username) {%>
                            value="<%= oldData.username %>"
                            <% } %> ><br>
                        </div>


                        <div class="formulario-pass">
                            <div class="palabra-contraseña"> CONTRASEÑA 
                           </div>
                            <i class="fa-sharp fa-solid fa-lock iconos"></i><label for="password"> </label>
                            <input class="email-pass" type="password" id="password" name="password"><br>



                        </div>

                        <div class="formulario-pass">
                            <div class="palabra-contraseña"> NOMBRE  </div>
                            <i class="fa-sharp fa-solid fa-lock iconos"></i><label for="name"> </label>
                            <input class="email-pass" 
                            type="text" 
                            id="name" 
                            name="name"
                            <% if (locals.oldData && locals.oldData.name) {%>
                                value="<%= oldData.name %>"
                                <% } %> 
                            ><br>



                        </div>
                        <div class="formulario-pass">
                            <div class="palabra-contraseña"> MAIL </div>
                            <i class="fa-sharp fa-solid fa-lock iconos"></i><label for="email"> </label>
                            <input class="email-pass" 
                            type="text" 
                            id="email" 
                            name="email"
                            <% if (locals.oldData && locals.oldData.email) {%>
                                value="<%= oldData.email %>"
                                <% } %> 
                            ><br>



                        </div>
                        <div class="formulario-pass">
                            <div class="palabra-contraseña"> IMAGEN </div>
                            <i class="fa-sharp fa-solid fa-lock iconos"></i><label for="user_image"> </label>
                            <input class="email-pass" type="file" id="user_image" name="user_image"><br>



                        </div>

                </div>
                <section class="final">


                    <button type="submit"> Registrar <i class="fa-sharp fa-solid fa-arrow-right"></i> </button>
                </form>
                </section>

                

            </section>
            
        </main>
        <br>

        <%- include('./partials/footer') %>
</body>

</html>