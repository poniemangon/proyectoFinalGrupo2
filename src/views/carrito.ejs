    <main>
      </br>
      </br>
      </br>
      </br>
      <h1>
        Carrito <i class="fa-solid fa-cart-shopping icon-header-carrito"></i>
      </h1>

      <div class="container">
        <div class="productos-container">
          <% if (productos.length == 0){ %>
            <h1>No hay productos en el carrito!</h1>
          <% } %>
          <% for (producto of productos){ %>
            <div class="producto">
              <div class="producto-data">
                <div class="descripcion">
                  <p class="nombre">
                    <%= producto.name %>
                  </p>
                  <p class="color">Color: Negro</p>
                  <p class="talle">Talle: M</p>
                  <form class="cantidad">
                    <label>Cantidad:</label>
                    <p>
                      <%= producto.amount %>
                    </p>


                  </form>
                  <p class="precio">$<%= producto.price %>
                  </p>
                </div>
              </div>

            </div>
            <form class="eliminar" action="/products/remove" method="post" enctype="application/x-www-form-urlencoded">
              <input type="hidden" id="productId" name="productId" value="<%= producto.id %>" />
              <button type="submit" class="agregar-carrito-btn">
                Eliminar de carrito
              </button>
            </form>
            <% } %>
          </div>
              <div class="total">
                <p>CANTIDAD DE UNIDADES: <%= locals.amountProductos %>
                </p>

                <p>PRECIO TOTAL: <%= locals.totalPrice %>
                </p>

              </div>
      </div>
        
